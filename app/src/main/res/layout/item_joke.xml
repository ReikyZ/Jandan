<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alpha_grey"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/min_margin"
    android:paddingRight="@dimen/min_margin"
    android:paddingTop="2dp">

    <com.reikyz.jandan.widget.ShadowLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_shadowColor="#55000000">

        <LinearLayout
            android:id="@+id/ll_joke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/mid_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_joke_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hhhh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ls_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_joke_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mid_margin"
                    android:text="wwwwwwww"
                    android:textSize="@dimen/ls_text_size" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mid_margin">


                <ImageView
                    android:id="@+id/iv_joke_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pic_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/blank_vertical" />

                <TextView
                    android:id="@+id/tv_joke_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.08"
                    android:lineSpacingExtra="1.5dp"
                    android:layout_below="@+id/iv_joke_pic"
                    android:text="hhhhh"
                    android:textColor="@color/strong_grey"
                    android:textSize="@dimen/sm_text_size" />

                <ImageView
                    android:id="@+id/iv_mask"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_alignBottom="@+id/tv_joke_content"
                    android:background="@drawable/shadow_grident" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mid_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_oo_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/ls_text_size" />


                <TextView
                    android:id="@+id/tv_xx_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mid_margin"
                    android:text="0"
                    android:textSize="@dimen/ls_text_size" />

                <TextView
                    android:id="@+id/tv_spit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mid_margin"
                    android:text="0"
                    android:textColor="@color/strong_grey"
                    android:textSize="@dimen/ls_text_size" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_joke_action"
                    android:layout_width="30dp"
                    android:visibility="gone"
                    android:layout_height="30dp"
                    android:background="@color/grey"
                    android:padding="@dimen/min_margin" />

            </LinearLayout>


        </LinearLayout>
    </com.reikyz.jandan.widget.ShadowLayout>


</LinearLayout>