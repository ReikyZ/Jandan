<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/min_margin"
    android:background="@color/alpha_grey"
    android:paddingRight="@dimen/min_margin"
    android:paddingTop="2dp">

    <com.reikyz.jandan.widget.ShadowLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_shadowColor="#55000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_news"
            android:layout_height="match_parent"
            android:padding="@dimen/min_margin"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/max_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_news_title"
                    android:layout_marginLeft="@dimen/min_margin"
                    android:textSize="@dimen/sm_text_size"
                    android:layout_marginTop="@dimen/min_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="何厚铧红红火火"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_marginLeft="@dimen/min_margin"
                    android:textSize="@dimen/ls_text_size"
                    android:layout_marginBottom="@dimen/min_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_news_thumb"
                android:layout_width="90dp"
                android:layout_marginRight="@dimen/min_margin"
                android:layout_gravity="center_vertical"
                android:layout_height="60dp"
                android:scaleType="centerCrop" />

        </LinearLayout>
    </com.reikyz.jandan.widget.ShadowLayout>


</LinearLayout>