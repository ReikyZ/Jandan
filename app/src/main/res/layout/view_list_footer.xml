<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/transparent">

    <com.reikyz.jandan.widget.CircleProgressBar
        android:id="@+id/proBar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:padding="@dimen/max_margin"
        app:mlpb_enable_circle_background="false"
        app:mlpb_progress_stoke_width="4dp"
        app:mlpb_progress_text_visibility="invisible"
        app:mlpb_show_arrow="false" />

    <ImageView
        android:id="@+id/iv_fantwan_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:padding="25dp" />


    <!-- listview footer bg color-->
    <!--android:background="@drawable/bg_list_item"-->
    <TextView

        android:id="@+id/tv_load_more"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/click_to_load_more"
        android:textColor="@color/transparent_black"
        android:textSize="@dimen/s_text_size"
        android:visibility="invisible" />

    <TextView

        android:id="@+id/tv_no_more"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/no_more"
        android:textColor="@color/transparent_black"
        android:textSize="@dimen/s_text_size"
        android:visibility="invisible" />
</RelativeLayout>